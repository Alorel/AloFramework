<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="phpunit.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         verbose="true"
         printerClass="PHPUnit_TextUI_ResultPrinter"
        >
    <testsuites>
        <testsuite name="Tests">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="phpunit_log/report" lowUpperBound="35"
             highLowerBound="70"/>
        <log type="json" target="phpunit_log/report.json"/>
        <log type="junit" target="phpunit_log/report.xml" logIncompleteSkipped="true"/>
        <log type="testdox-html" target="phpunit_log/report.html"/>
        <log type="testdox-text" target="phpunit_log/report.txt"/>
    </logging>
    <php>
        <ini name="display_errors" value="On"/>
    </php>
</phpunit>
